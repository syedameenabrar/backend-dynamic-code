<html>
  <head>
    <title>Vehicle Report</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }

      h1, h3 {
        color: #333;
      }

      p {
        margin: 4px 0;
      }

      hr {
        margin: 20px 0;
      }

      .image-group {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 10px;
      }

      .image-item {
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 8px;
        width: 300px;
        background-color: #f9f9f9;
      }

   .image-item img {
  width: 100%;
  max-height: 200px;
  object-fit: contain; /* changed from 'cover' to 'contain' */
  border-radius: 4px;
}

      .image-number {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
        color: #555;
      }
    </style>
  </head>
  <body>
    <h1>Vehicle Report</h1>

    <p><strong>Lead Date:</strong> <%= vehicle?.createdDate %></p>
    <p><strong>Unique Product Name:</strong> <%= vehicle?.uniqueProductName %></p>
    <p><strong>Client Username:</strong> <%= vehicle?.clientUsername %></p>
    <p><strong>Client Full Name:</strong> <%= vehicle?.fullName %></p>
    <p><strong>Vehicle Number:</strong> <%= vehicle?.vehicleNumber %></p>
    <p><strong>Vehicle Type:</strong> <%= vehicle?.vehicleType %></p>
    <p><strong>Brand:</strong> <%= vehicle?.brandName %></p>
    <p><strong>Model:</strong> <%= vehicle?.modelName %></p>
    <p><strong>Phone:</strong> <%= vehicle?.phoneNumber %></p>
    <p><strong>WhatsApp Number:</strong> <%= vehicle?.whatsAppNumber %></p>
    <p><strong>Location:</strong> <%= vehicle?.location %></p>
    <p><strong>Manufacture Year:</strong> <%= vehicle?.manufactureYear %></p>
    <p><strong>Condition:</strong> <%= vehicle?.condition %></p>
    <p><strong>Fuel/Wheel Type:</strong> <%= vehicle?.fuleWhellType %></p>
    <p><strong>Shown Price:</strong> <%= vehicle?.price %></p>
    <p><strong>Final Price:</strong> <%= vehicle?.userFinalAmount %></p>
    <p><strong>Chasis Number:</strong> <%= vehicle?.chasisNumber %></p>
    <p><strong>Engine Number:</strong> <%= vehicle?.engineNumber %></p>
    <p><strong>Document Type:</strong> <%= vehicle?.userDocumentType %></p>
    <p><strong>Document Number:</strong> <%= vehicle?.userDocumentNumber %></p>
    <p><strong>Customer Address:</strong> <%= vehicle?.userAddress %></p>
    <p><strong>G-map URL:</strong> <%= vehicle?.userAddressGoogleMapLink %></p>
    <p><strong>Schedule PickUp Date:</strong> <%= vehicle?.schedulePickUp?.date %></p>

    <hr>

    <% const pictureGroups = [
      { label: 'Vehicle Pictures', images: vehicle?.vehiclePictures },
      { label: 'User Document Pictures', images: vehicle?.userDocumentsPictures },
      { label: 'RC Pictures', images: vehicle?.rcPictures },
      { label: 'Towing Pictures', images: vehicle?.towingPictures },
      { label: 'Chasis Pictures', images: vehicle?.chasisPictures },
      { label: 'Engine Pictures', images: vehicle?.enginePictures },
      { label: 'Scrap Pictures', images: vehicle?.scrapPictures },
      { label: 'Scrap Letter Pictures', images: vehicle?.scrapLetterPictures },
    ]; %>

    <% pictureGroups.forEach(group => { %>
      <% if (group?.images?.length) { %>
        <h3><%= group?.label %> [<%= group?.images?.length %>]:</h3>
        <div class="image-group">
          <% group?.images.forEach((pic, index) => { %>
            <div class="image-item">
              <span class="image-number">#<%= index + 1 %></span>
<img src="<%= pic?.img?.replace('/upload/', '/upload/q_auto:good,f_auto,w_600,c_fit/') %>" />


            </div>
          <% }); %>
        </div>
        <hr>
      <% } %>
    <% }); %>
  </body>
</html>


